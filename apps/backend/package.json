{
  "name": "@sweet-shop/backend",
  "version": "1.0.0",
  "description": "Sweet Shop Management System - Backend API",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "npx tsx --watch src/index.ts",
    "build": "tsc",
