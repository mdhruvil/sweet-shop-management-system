{
  "name": "sweet-shop-management-system",
  "version": "1.0.0",
  "description": "Sweet Shop Management System - Monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdhruvil/sweet-shop-management-system"
  },
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --recursive dev",
    "build": "pnpm --recursive build",
    "start": "pnpm --filter backend start",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm --recursive lint",
    "test": "pnpm --recursive test",
    "test:coverage": "pnpm --recursive test:coverage",
    "test:watch": "pnpm --recursive test:watch",
    "typecheck": "pnpm --recursive typecheck",
    "clean": "pnpm --recursive clean"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0"
  }
}
